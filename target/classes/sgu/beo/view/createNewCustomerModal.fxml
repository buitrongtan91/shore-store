<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
    <?import javafx.scene.control.Button?>
    <?import javafx.scene.control.Label?>
    <?import javafx.scene.control.TextField?>
    <?import javafx.scene.layout.GridPane?>
    <?import javafx.scene.layout.HBox?>
    <?import javafx.scene.layout.VBox?>
    
    <VBox xmlns="http://javafx.com/javafx/19"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="sgu.beo.Controller.CreateNewCustomerModalController"
          spacing="30" alignment="CENTER">
       <padding>
          <Insets top="20" right="30" bottom="20" left="30"/>
       </padding>
    
       <GridPane hgap="20" vgap="25">
          <children>
             <!-- Name -->
             <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"
                    style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
             <VBox spacing="5" GridPane.rowIndex="0" GridPane.columnIndex="1">
                <children>
                   <TextField fx:id="nameField" promptText="Enter name"
                              style="-fx-pref-width: 400px; -fx-font-size: 16px;" />
                   <Label fx:id="nameErrorLabel" text=""
                          style="-fx-text-fill: red; -fx-font-size: 14px;" />
                </children>
             </VBox>
    
             <!-- Phone -->
             <Label text="Phone:" GridPane.rowIndex="1" GridPane.columnIndex="0"
                    style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
             <VBox spacing="5" GridPane.rowIndex="1" GridPane.columnIndex="1">
                <children>
                   <TextField fx:id="phoneField" promptText="Enter phone number"
                              style="-fx-pref-width: 400px; -fx-font-size: 16px;" />
                   <Label fx:id="phoneErrorLabel" text=""
                          style="-fx-text-fill: red; -fx-font-size: 14px;" />
                </children>
             </VBox>
    
             <!-- Address -->
             <Label text="Address:" GridPane.rowIndex="2" GridPane.columnIndex="0"
                    style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
             <VBox spacing="5" GridPane.rowIndex="2" GridPane.columnIndex="1">
                <children>
                   <TextField fx:id="addressField" promptText="Enter address"
                              style="-fx-pref-width: 400px; -fx-font-size: 16px;" />
                   <Label fx:id="addressErrorLabel" text=""
                          style="-fx-text-fill: red; -fx-font-size: 14px;" />
                </children>
             </VBox>
    
             <!-- Email -->
             <Label text="Email:" GridPane.rowIndex="3" GridPane.columnIndex="0"
                    style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
             <VBox spacing="5" GridPane.rowIndex="3" GridPane.columnIndex="1">
                <children>
                   <TextField fx:id="emailField" promptText="Enter email"
                              style="-fx-pref-width: 400px; -fx-font-size: 16px;" />
                   <Label fx:id="emailErrorLabel" text=""
                          style="-fx-text-fill: red; -fx-font-size: 14px;" />
                </children>
             </VBox>
          </children>
       </GridPane>
    
       <!-- Buttons -->
       <HBox spacing="20" alignment="CENTER">
          <children>
             <Button fx:id="cancelButton" text="Cancel"
                     style="-fx-font-size: 16px; -fx-padding: 6 18;"/>
             <Button fx:id="createButton" text="Create"
                     style="-fx-font-size: 16px; -fx-padding: 6 18;"/>
          </children>
       </HBox>
    </VBox>
    