<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/19" fx:controller="sgu.beo.Controller.UpdateProductModalController">
        <children>
            <VBox alignment="CENTER" spacing="10" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">
                <padding>
                    <Insets bottom="20" left="20" right="20" top="20" />
                </padding>
    
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Update Product" />
    
                <HBox spacing="10">
                    <Label minWidth="80" text="Name:" />
                    <TextField fx:id="nameField" promptText="Enter product name" />
                </HBox>
    
                <HBox spacing="10">
                    <Label minWidth="80" text="Brand:" />
                    <ComboBox fx:id="brandComboBox" prefWidth="200" />
                </HBox>
    
                <HBox spacing="10">
                    <Label minWidth="80" text="Category:" />
                    <ComboBox fx:id="categoryComboBox" prefWidth="200" />
                </HBox>
    
                <HBox alignment="CENTER" spacing="10">
                    <Button fx:id="updateBtt" text="Update" />
                    <Button fx:id="cancelBtt" text="Cancel" />
                </HBox>
            </VBox>
        </children>
    </AnchorPane>
